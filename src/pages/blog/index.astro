---
import Layout from '../../layouts/StaticPageLayout.astro';
import LazyAdSlot from '../../components/ads/LazyAdsSlot';
import { ARTICLE_AD_SLOT, CA_PUB_ID, DISPLAY_AD_FORMAT, DISPLAY_AD_SLOT } from '../../const';
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Blog & Insightful Resources - InvisibleText.me" description='Explore our articles about invisible characters, Unicode, and creative text formatting'>
  <div class="w-full max-w-7xl mx-auto px-4 md:px-8 lg:px-12 xl:px-16">
    <section class="py-8 md:py-16 lg:py-20">
      <!-- Enhanced Header with Gradient -->
      <div class="text-center mb-12 md:mb-20 px-2 md:px-4 mt-8">
        <div class="inline-block mb-4">
          <span class="px-4 py-2 bg-gradient-to-r from-yellow-100 to-orange-100 text-navy-900 rounded-full text-sm font-semibold tracking-wide">
            LATEST ARTICLES
          </span>
        </div>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold mb-6 text-yellow-100 bg-clip-text bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 leading-tight">
          Blog
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed font-light">
          Explore our articles about invisible characters, Unicode, and creative text formatting
        </p>
      </div>
      
      <!-- Enhanced Blog Grid -->
      <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-10 lg:gap-12 list-none m-0 p-0 px-6">
        {
          posts.map((post, index) => (
            <li class={`w-full group ${index === 0 ? 'md:col-span-2' : ''}`}>
              <a 
                href={`/blog/${post.slug}`} 
                class={`block no-underline text-white border border-white/5 rounded-3xl overflow-hidden flex transition-all duration-500 ease-out shadow-sm shadow-navy-700 hover:shadow-2xl hover:shadow-yellow-100 hover:-translate-y-2 hover:border-yellow-200/50 ${index === 0 ? 'flex-col md:flex-row' : 'flex-col'}`}
              >
                {post.data.image && (
                  <div class={`overflow-hidden relative ${index === 0 ? 'md:w-1/2' : 'w-full'}`}>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
                    <Image 
                      width={720} 
                      height={360} 
                      src={post.data.image} 
                      alt={post.data.title}
                      class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
                    />
                  </div>
                )}
                <div class={`p-6 md:p-8 lg:p-10 flex flex-col justify-center ${index === 0 ? 'md:w-1/2' : 'w-full'}`}>
                  {/* Category Badge (if you add categories later) */}
                  <div class="mb-4">
                    <span class="inline-block px-3 py-1 bg-yellow-50 text-yellow-700 rounded-lg text-xs font-semibold uppercase tracking-wider">
                      Article
                    </span>
                  </div>
                  
                  <h4 class={`m-0 mb-4 text-white leading-tight font-bold group-hover:text-yellow-100 transition-colors duration-300 ${index === 0 ? 'text-3xl md:text-4xl lg:text-5xl' : 'text-xl md:text-2xl'}`}>
                    {post.data.title}
                  </h4>
                  
                  <div class="flex items-center gap-3 mb-4 text-sm text-yellow-100/75">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Format date
const formatDate = (date) => {
  return new Intl.DateTimeFormat('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  }).format(date);
};

// Get all unique tags
const allTags = Array.from(new Set(sortedPosts.flatMap(post => post.data.tags || [])));
---

<Layout title="Blog - InvisibleText.me" description='Explore our articles about invisible characters, Unicode, and creative text formatting'>

  <div class="blog-container">
    <div class="blog-header">
      <h1 class="blog-title">Blog</h1>
      <p class="blog-description">Explore our articles about invisible characters, Unicode, and creative text formatting</p>
    </div>
    
    <div class="blog-layout">
      <div class="blog-main">
        <div class="blog-posts">
          {sortedPosts.map(post => (
            <article class="blog-post-card">
              {post.data.image && (
                <a href={`/blog/${post.slug}`} class="blog-post-image-link">
                  <img 
                    src={post.data.image || "/placeholder.svg"} 
                    alt={post.data.title} 
                    class="blog-post-image"
                  />
                </a>
              )}
              <div class="blog-post-content">
                <div class="blog-post-meta">
                  <span class="blog-post-date">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                      <line x1="16" y1="2" x2="16" y2="6"></line>
                      <line x1="8" y1="2" x2="8" y2="6"></line>
                      <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    {formatDate(post.data.pubDate)}
                  </span>
                </div>
                <h2 class="blog-post-title">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h2>
                <p class="blog-post-excerpt">{post.data.description || post.data.excerpt || ''}</p>
                <div class="blog-post-footer">
                  <a href={`/blog/${post.slug}`} class="read-more">
                    Read More
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="m9 18 6-6-6-6"></path>
                    </svg>
                    <FormattedDate date={post.data.pubDate} />
                  </div>
                  
                  {post.data.description && (
                    <p class={`m-0 text-gray-300 leading-relaxed ${index === 0 ? 'text-base md:text-lg' : 'text-base'}`}>
                      {post.data.description}
                    </p>
                  )}
                  
                  {/* Read More Arrow */}
                  <div class="mt-6 flex items-center gap-2 text-yellow-300 font-semibold group-hover:gap-4 transition-all duration-300">
                    <span>Read Article</span>
                    <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </div>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
      
      <!-- Optional: CTA Section at bottom -->
      <div class="mt-20 text-center px-6">
        <div class="max-w-2xl mx-auto p-8 md:p-12 bg-gradient-to-br from-yellow-50 to-orange-50 rounded-3xl border border-yellow-100">
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
            Stay Updated
          </h3>
          <p class="text-gray-600 text-lg mb-6">
            Get notified when we publish new articles about Unicode and text formatting
          </p>
          <button class="px-8 py-3 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold rounded-full transition-all duration-300 hover:shadow-lg hover:shadow-yellow-200 hover:-translate-y-0.5">
            Subscribe to Newsletter
          </button>
              </div>
            </article>
          ))}
          <LazyAdSlot
            client:visible
            adClient={CA_PUB_ID}
            adSlot={DISPLAY_AD_SLOT || ARTICLE_AD_SLOT }
            format={DISPLAY_AD_FORMAT}
            style={{ display: 'block', textAlign: 'center' }}
          />
        </div>
      </div>
    </section>
  </div>
</Layout>
  
</Layout>

<style>
  .blog-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }
  
  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .blog-title {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--yellow-400);
    margin-bottom: 1.5rem;
  }
  
  .blog-description {
    font-size: 1.375rem;
    color: var(--gray-400);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .blog-layout {
    display: flex;
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  
  .blog-posts {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
  }
  
  .blog-post-card {
    background-color: var(--navy-800);
    border: 1px solid var(--navy-700);
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }
  
  .blog-post-card:hover {
    transform: translateY(-8px);
    border-color: var(--navy-600);
  }
  
  .blog-post-image-link {
    display: block;
    overflow: hidden;
  }
  
  .blog-post-image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .blog-post-image-link:hover .blog-post-image {
    transform: scale(1.05);
  }
  
  .blog-post-content {
    padding: 2rem;
  }
  
  .blog-post-meta {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    color: var(--gray-400);
    font-size: 0.875rem;
  }
  
  .blog-post-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .blog-post-title {
    font-size: 1.625rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  
  .blog-post-title a {
    color: var(--white);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .blog-post-title a:hover {
    color: var(--yellow-400);
  }
  
  .blog-post-excerpt {
    color: var(--gray-300);
    margin-bottom: 2rem;
    line-height: 1.7;
    font-size: 1rem;
  }
  
  .blog-post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid var(--navy-700);
    padding-top: 1.5rem;
  }
  
  .read-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--yellow-400);
    font-weight: 500;
    text-decoration: none;
    transition: gap 0.2s ease;
    font-size: 0.875rem;
  }
  
  .read-more:hover {
    gap: 0.75rem;
  }
  
  .blog-post-tags {
    display: flex;
    gap: 0.75rem;
  }
  
  .blog-post-tag {
    background-color: var(--navy-700);
    color: var(--gray-300);
    padding: 0.375rem 0.875rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    transition: background-color 0.2s ease;
  }
  
  .blog-post-tag:hover {
    background-color: var(--navy-600);
    color: var(--white);
  }
  
  .blog-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .sidebar-section {
    background-color: var(--navy-800);
    border: 1px solid var(--navy-700);
    border-radius: 1rem;
    overflow: hidden;
  }
  
  .sidebar-title {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--white);
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--navy-700);
    background-color: var(--navy-700);
  }
  
  .sidebar-content {
    padding: 2rem;
  }
  
  .sidebar-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }
  
  .sidebar-tag {
    background-color: var(--navy-700);
    color: var(--gray-300);
    padding: 0.375rem 0.875rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    transition: background-color 0.2s ease;
  }
  
  .sidebar-tag:hover {
    background-color: var(--navy-600);
    color: var(--white);
  }
  
  .recent-posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .recent-post-item {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--navy-700);
  }
  
  .recent-post-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }
  
  .recent-post-item a {
    color: var(--gray-300);
    text-decoration: none;
    transition: color 0.2s ease;
    display: block;
    line-height: 1.5;
    font-size: 0.875rem;
  }
  
  .recent-post-item a:hover {
    color: var(--yellow-400);
  }
  
  @media (min-width: 768px) {
    .blog-layout {
      grid-template-columns: 2fr 1fr;
    }
    
    .blog-posts {
      grid-template-columns: repeat(1, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .blog-posts {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 767px) {
    .blog-container {
      padding: 3rem 1rem;
    }
    
    .blog-header {
      margin-bottom: 3rem;
    }
    
    .blog-title {
      font-size: 2.75rem;
      margin-bottom: 1.25rem;
    }
    
    .blog-description {
      font-size: 1.125rem;
    }
    
    .blog-posts {
      gap: 2rem;
    }
    
    .blog-post-content {
      padding: 1.5rem;
    }
    
    .blog-post-title {
      font-size: 1.375rem;
    }
    
    .blog-post-excerpt {
      margin-bottom: 1.5rem;
    }
    
    .blog-post-footer {
      padding-top: 1.25rem;
    }
    
    .sidebar-content {
      padding: 1.5rem;
    }
    
    .sidebar-title {
      padding: 1.25rem 1.5rem;
    }
  }
</style>

